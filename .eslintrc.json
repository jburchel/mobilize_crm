{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "camelcase": ["error"],
    "max-len": ["warn", { "code": 100 }],
    "arrow-spacing": ["error"],
    "no-var": ["error"],
    "prefer-const": ["warn"],
    "object-curly-spacing": ["error", "always"]
  }
}